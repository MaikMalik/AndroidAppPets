<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#f2e0c0"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/card_article">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#f2e0c0">
            <ImageView
                android:id="@+id/imgView_article"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="4dp"
                android:background="@drawable/radious_imageview"
                android:scaleType="centerCrop"
                android:src="@drawable/splash2_2"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:textSize="28sp"
            android:padding="6dp"
            android:fontFamily="@font/telescope"
            android:text="Titulo de la noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDescription"
            android:textSize="20sp"
            android:padding="6dp"
            android:fontFamily="@font/telescope"
            android:text="Descripcion de la noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_compartir"
                style="@style/TertiaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bottom_nav_rounded"
                android:text="Compartir"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_vernoticia"
                style="@style/TertiaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_bottom_nav_rounded"
                android:text="Ver Noticia"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>